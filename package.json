{
  "name": "hearth-gem",
  "version": "0.1.0",
  "description": "HearthGem Arena Assistant - A tool for Hearthstone Arena drafts",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "tsc -w & electron .",
    "build": "tsc && node scripts/copy-assets.js",
    "watch": "tsc -w",
    "lint": "eslint --ext .ts,.tsx .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test-ocr": "npx ts-node scripts/batch-ocr-test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/hearth-gem.git"
  },
  "keywords": [
    "hearthstone",
    "arena",
    "assistant",
    "overlay",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "canvas": "^3.1.2",
    "chokidar": "^3.5.3",
    "electron-log": "^4.4.8",
    "minimist": "^1.2.8",
    "sharp": "^0.34.2",
    "string-similarity": "^4.0.4",
    "tesseract.js": "^6.0.1",
    "winston": "^3.8.2",
    "yargs": "^18.0.0",
    "upscaler": "^1.0.0-beta.19",
    "@upscalerjs/esrgan-slim": "^1.0.0-beta.12"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "@types/node": "^18.15.11",
    "@types/string-similarity": "^4.0.2",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "electron": "^24.1.2",
    "electron-builder": "^23.6.0",
    "eslint": "^8.38.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.4"
  },
  "build": {
    "appId": "com.yourusername.hearthgem",
    "productName": "HearthGem Arena Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/index.html",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
